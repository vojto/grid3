template(name='hack_inspector_grouped_table')
  .inspector
    .header Source
    form
      table.form
        tr
          td
            label Table
          td
            = inputTableName

    .header Grouping

    form
      table.form
        tr
          td
            label Group column
          td
            select.group-column
              option
              each columns
                option(value=_id)= title

    .actions-bottom
      button.delete Delete
