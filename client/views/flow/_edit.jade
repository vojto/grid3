template(name='flow_edit')
  header
    .buttons
      button.editor
        i.entypo.line-graph
        | Editor
    a.logo
  div.main
    .split
      .main
        #flow
          svg(width='100%' height='100%')

            defs
              marker#head(orient='auto', viewBox="0 0 10 10" markerWidth='6', markerHeight='6', refX='2', refY='5')
                path(d="M 0 5 L 10 0 L 10 10 z", fill='#fff')

            each steps
              line(x1=x1 y1=y1 x2=x2 y2=y2 stroke='#fff' stroke-width='2' marker-start='url(#head)')

          each steps
            div.step.collapsed(data-id=_id, style=stepStyle)
              i.entypo.cog
              span= title
          = updateStep