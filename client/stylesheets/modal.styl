.modal
  .overlay
    position absolute
    position fixed
    top 0
    left 0
    right 0
    bottom 0
    background #000
    opacity 0.5
    z-index 100

  .dialog
    position absolute
    z-index 101
    top 50%
    left 50%
    width w = 450px
    height h = 250px
    margin-left -(w / 2)
    margin-top -(h / 2)
    background #fff
    border-radius 3px
    box-shadow 0 2px 15px rgba(0,0,0,0.25)

    .content, .actions
      padding 25px

    h2
      margin 0
      font-weight 500

    p
      color #8b959e
      height 45px