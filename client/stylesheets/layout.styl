@import 'nib'
@import '_colors'

body
  background bg1
  color fg1
  padding 0
  margin 0

header
  background #2c3f52
  padding 20px 50px

  .buttons
    float right
    margin-top -7px

main
  padding 20px 50px

a.logo
  display block
  width 69px
  height 19px
  image '/images/logo.png' 69px 19px
  text-indent -9999px


// Split layout

div.split
  position absolute
  top 60px
  right 0
  bottom 0
  left 0

  .main
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    background bg2

  .left, .right, .sidebar
    position absolute
    top 0
    bottom 0
    padding 15px 20px
    box-sizing border-box
    overflow auto

  .sidebar
    left 0
    width 20%
    background bg2

  .left
    left 20%
    width 40%
    background bg1
    border-right 1px solid fg2

  .right
    right 0
    width 40%
    background bg3