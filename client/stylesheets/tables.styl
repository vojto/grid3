@import 'nib'
@import '_colors'

table.preview
  border-spacing 0
  border-collapse collapse
  border 1px solid fg2
  border-radius 5px

  tr
    td, th
      font-size 11px
      color fg2
      border-bottom 1px solid fg2
      padding 3px 6px
    th
      color fg3
      text-align left
      font-weight normal

  tr:hover
    td
      background fg2
      color bg1