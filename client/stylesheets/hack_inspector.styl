@import 'nib'

.inspector
  position absolute
  top 45px
  right 0
  bottom 0
  background #f4f6f7
  width 250px
  border-left 1px solid #d4dae1
  z-index 30
  box-shadow 0 0 5px rgba(0,0,0,0.1)
  color #abb3b8

  .header
    background linear-gradient(top, #fff, #f6f8f9)
    border-bottom 1px solid #d8dfe4
    border-top 1px solid #d8dfe4
    font-weight 500
    font-size 12px
    color #929598
    padding 5px 10px
    margin-bottom 10px

  form
    padding 0 5px
    margin-top 10px
    margin-bottom 15px

  table.form
    width 100%

    label
      font-size 12px
      color #383838

    input
      width 100%
      box-sizing border-box

  .actions-bottom
    position absolute
    bottom 10px
    width 100%
    padding 0 10px
    box-sizing border-box

  // TODO: Move
  button.delete
    color #fff
    text-shadow 0 1px 0 rgba(0,0,0,0.5)
    font-size 16px
    font-weight 500
    border none
    border-radius 3px
    width 100%
    box-sizing border-box
    padding 5px 10px
    background linear-gradient(top, 0% #f79090, 49% #ee5353, 50% #e64949, 100% #c63d3d);