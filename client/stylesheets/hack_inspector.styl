@import 'nib'

.inspector
  position absolute
  top 45px
  right 0
  bottom 0
  background #f4f6f7
  width 250px
  border-left 1px solid #d4dae1
  z-index 30
  box-shadow 0 0 5px rgba(0,0,0,0.1)
  color #abb3b8

  .icon-button
    font-size 20pt
    cursor pointer

  .header
    background linear-gradient(top, #fff, #f6f8f9)
    border-bottom 1px solid #d8dfe4
    border-top 1px solid #d8dfe4
    font-weight 500
    font-size 12px
    color #929598
    padding 5px 10px
    margin-bottom 10px

    .icon-button
      display block
      float right
      padding-top 10px

  form
    padding 0 5px
    margin-top 10px
    margin-bottom 15px

  table.form
    width 100%

    label
      font-size 12px
      color #383838

    input
      width 100%
      box-sizing border-box

  .actions-bottom
    position absolute
    bottom 10px
    width 100%
    padding 0 10px
    box-sizing border-box

  // TODO: Move
  button.delete
    color #fff
    text-shadow 0 1px 0 rgba(0,0,0,0.5)
    font-size 16px
    font-weight 500
    border none
    border-radius 3px
    width 100%
    box-sizing border-box
    padding 5px 10px
    background linear-gradient(top, 0% #f79090, 49% #ee5353, 50% #e64949, 100% #c63d3d);

  svg.preview
    margin-left 10px
    border 1px solid #d4dae1;
    background #fff

  .box
    background #f2eff6
    border 1px solid #e5dbec
    margin 0 10px
    border-radius 3px
    margin-bottom 10px

    .buttons
      text-align right
      color #cebfd9
    form
      margin-top 0


ul.graph-types
  list-style none
  padding 0
  clearfix()
  color #9ca0a2
  font-size 10pt

  li
    width 50%
    box-sizing border-box
    height 90px
    float left
    text-align center

    .image
      margin auto
      background #fff
      border 1px solid #e2e2e2
      width 84px
      height 58px

    &.selected
      font-weight 500
      color #5b95ed

      .image
        border-radius 2px
        border 2px solid #5b95ed

    &.line .image
      image: '/images/graphs/line.png' 84px 58px
    &.bar .image
      image: '/images/graphs/bar.png' 84px 58px
    &.area .image
      image: '/images/graphs/area.png' 84px 58px
    &.scatterplot .image
      image: '/images/graphs/scatterplot.png' 84px 58px

