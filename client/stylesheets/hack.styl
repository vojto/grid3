@import 'nib'

body
  background #ebeced

.toolbar
  border-radius 3px
  background linear-gradient(#fafafa, #fafafa, #edeff0)
  box-shadow 0 1px 1px #b9c1c8
  padding 10px 10px
  position absolute
  left 20px
  right 20px
  top 15px
  font-weight 500
  color #818c96
  font-size 10pt

  i.entypo
    font-size 26pt
    position relative
    top 3px
    margin-right 3px

  ul
    list-style none
    padding 0
    margin 0

    li
      margin 0
      cursor pointer

      &:active
        color #656f77

.sources
  padding-top 60px

  .source
    width 400px
    overflow hidden
    height 150px
    background #fff
    border 1px solid #c4c4c4
    border-radius 3px
    // box-shadow 0 1px 5px rgba(0,0,0,0.15)
    position absolute
    box-sizing border-box

    table
      border-collapse collapse
      width 100%

      th, td
        font-size 12px
        border-bottom 1px solid #dbdbdb
        border-right 1px solid #dbdbdb
        padding 3px 5px

        &:first-child
          padding-left 8px

        &:last-child
          border-right none