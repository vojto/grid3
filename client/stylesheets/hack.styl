@import 'nib'

body
  background #ebeced

.toolbar
  border-radius 3px
  background linear-gradient(#fafafa, #fafafa, #edeff0)
  box-shadow 0 1px 1px #b9c1c8
  padding 10px 10px
  position absolute
  left 20px
  right 20px
  top 15px
  font-weight 500
  color #818c96
  font-size 10pt

  i.entypo
    font-size 26pt
    position relative
    top 3px
    margin-right 3px

  ul
    list-style none
    padding 0
    margin 0

    li
      margin 0
      cursor pointer

      &:active
        color #656f77