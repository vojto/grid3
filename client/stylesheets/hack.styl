@import 'nib'

html, body
  height 100%

body
  background #f7f7f7

.toolbar
  background linear-gradient(#fafafa, #fafafa, #edeff0)
  box-shadow 0 1px 1px #b9c1c8
  padding 10px 10px
  position absolute
  left 0
  right 0
  top 0
  height 45px
  box-sizing border-box
  z-index 35
  font-weight 500
  color #818c96
  font-size 10pt

  i.entypo
    font-size 26pt
    position relative
    top 3px
    margin-right 3px

  ul
    list-style none
    padding 0
    margin 0

    li
      margin 0
      cursor pointer
      padding-top 3px

      &:active
        color #656f77

header-style()
  border-color #c4c4c4
  background linear-gradient(#fff, #fff, #f8f8f8)
  font-weight 500
  font-size 11px
  color #383838

.sources
  padding-top 60px

  .source
    width 400px
    height 150px
    background #fff
    border 1px solid #c4c4c4
    border-radius 3px
    box-shadow 0 1px 5px rgba(0,0,0,0.15)
    position absolute
    box-sizing border-box


    .source-wrapper
      height 100%

    .table-wrapper
      overflow hidden
      height 100%

    table
      border-collapse collapse
      width 100%

      th, td
        font-size 12px
        border-bottom 1px solid #dbdbdb
        border-right 1px solid #dbdbdb
        padding 3px 5px

        &:first-child
          padding-left 8px

        &:last-child
          border-right none

      th
        header-style()

        &:last-child
          border-radius 0 3px 0 0

  .source-wrapper
    position relative
    .handle
      position absolute
      top -14px
      left -14px
      z-index 20
      header-style()
      border 1px solid #c4c4c4
      border-radius 50%
      width 24px
      height 24px

      i.entypo
        font-size 36px
        line-height 25px
        padding-left 1px

  // Selecting

  .source.selected
    z-index 25
    border-color #6eadfb
    .handle
      border-color #6eadfb
      color #4780c8